generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Driver {
  id            Int      @id @unique @default(autoincrement())
  name          String
  driver_number Int      @unique
  nationality   String?
  team_id       String
  results       Result[]
}

model Race {
  id           String   @id
  season       Int
  date         DateTime @db.Date
  circuit_name String
  race_type    String   @default("Race")
  country      String
  city         String
  results      Result[]
}

model Result {
  id            Int      @id @unique @default(autoincrement())
  race_id       String
  driver_number Int
  position      Int?
  points        Int?     @default(0)
  extra_points  Int      @default(0)
  race          Race[]
  driver        Driver[]
}
